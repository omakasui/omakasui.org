---
import Footer from "@/components/layout/Footer.astro";

import "@/styles/global.css";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Omakasui - A curated collection of opinionated post-installation scripts for Linux distributions"
    />
    <title>
      Omakasui - {title ? title : `Post-Installation Scripts for Linux`}
    </title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.svg" />

    <!-- Open Graph Meta Tags -->
    <meta property="og:url" content="https://omakasui.org" />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Omakasui - Post-Installation Scripts for Linux"
    />
    <meta
      property="og:description"
      content="A curated collection of opinionated post-installation scripts for Linux distributions"
    />
    <meta property="og:image" content="https://omakasui.org/og-image.png" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="omakasui.org" />
    <meta property="twitter:url" content="https://omakasui.org" />
    <meta
      name="twitter:title"
      content="Omakasui - Post-Installation Scripts for Linux"
    />
    <meta
      name="twitter:description"
      content="A curated collection of opinionated post-installation scripts for Linux distributions"
    />
    <meta name="twitter:image" content="https://omakasui.org/og-image.png" />

    <meta name="generator" content={Astro.generator} />
  </head>
  <body
    class="font-monospace flex min-h-screen flex-col bg-[#221e22] font-mono text-[14px] leading-[1.6] text-[#e0e0e0]"
  >
    <main
      role="main"
      aria-label="Main content"
      class="mx-0 my-16 flex-1 px-8 py-0 lg:my-32 lg:px-16"
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
